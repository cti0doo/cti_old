<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_hr_apply_template">
            <field name="name">res.apply.template.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='hr_payroll_localization']" position="after">
                    <div class="row mt16 o_settings_container" id="hr_payroll_template">
                        <div class="col-md-6 col-xs-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <button string="Apply template" type="object" name="apply_hr_template"
                                        icon="fa-arrow-right" class="btn-link"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
