<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_product_ciiu_view">
            <field name="name">product.template.ciiu</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="sale.product_template_form_view_invoice_policy"></field>
            <field name="arch" type="xml">
                <field name="invoice_policy" position="after">
                    <field name="tope_retention"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_category_ciiu_view">
            <field name="name">product.category.ciiu</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="account.view_category_property_form"></field>
            <field name="arch" type="xml">
                <field name="property_account_expense_categ_id" position="after">
                    <field name="ciiu_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>